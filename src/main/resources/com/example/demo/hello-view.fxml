            <Font name="Times New Roman" size="15.0" />
         </font></Label>
        <Label alignment="CENTER" prefHeight="55.0" prefWidth="180.0" text="Индекс массы тела" GridPane.rowIndex="2">
            <font>
                <Font name="Times New Roman" size="17.0" />
            </font>
        </Label>
      <ComboBox fx:id="Combo_box" prefWidth="150.0" GridPane.rowIndex="3" />
    </GridPane>
    <Button fx:id="buttonRes" alignment="CENTER" mnemonicParsing="false" onAction="#ButtonClick" prefHeight="50.0" prefWidth="180.0" text="Рассчитать" />
