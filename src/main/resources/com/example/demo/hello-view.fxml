    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <GridPane fx:id="gridPane" alignment="CENTER" prefHeight="239.0" prefWidth="356.0">
        <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" maxWidth="178.0" minWidth="10.0" prefWidth="178.0" />
            <ColumnConstraints hgrow="SOMETIMES" maxWidth="180.0" minWidth="10.0" prefWidth="178.0" />
        </columnConstraints>
        <rowConstraints>
            <RowConstraints maxHeight="140.0" minHeight="10.0" prefHeight="40.0" vgrow="SOMETIMES" />
            <RowConstraints maxHeight="155.0" minHeight="10.0" prefHeight="40.0" vgrow="SOMETIMES" />
            <RowConstraints maxHeight="155.0" minHeight="10.0" prefHeight="40.0" vgrow="SOMETIMES" />
            <RowConstraints maxHeight="190.0" minHeight="10.0" prefHeight="40.0" vgrow="SOMETIMES" />
        </rowConstraints>
        <TextField fx:id="mass" promptText="Введите массу тела" GridPane.columnIndex="1" />
        <Label accessibleText="Масса тела" alignment="CENTER" contentDisplay="CENTER" prefHeight="65.0" prefWidth="195.0" text="Масса ">
            <font>
                <Font name="Times New Roman" size="18.0" />
            </font></Label>
        <Label accessibleText="Рост" alignment="CENTER" prefHeight="60.0" prefWidth="195.0" text="Рост" GridPane.rowIndex="1">
            <font>
                <Font name="Times New Roman" size="18.0" />
            </font></Label>
        <TextField fx:id="rost" promptText="Введите свой рост" GridPane.columnIndex="1" GridPane.rowIndex="1" />
